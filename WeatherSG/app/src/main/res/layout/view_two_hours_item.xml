<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin_half"
    android:paddingTop="@dimen/activity_vertical_margin_half">

    <TextView
        android:id="@+id/tv_two_hour_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/today"
        android:textColor="@color/material_color_bluegrey_200"
        android:textSize="@dimen/textsize_two_hours_item"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_two_hour_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin_half"
        tools:src="@mipmap/ic_launcher" />

</LinearLayout>
